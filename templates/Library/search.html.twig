<html>
    <body>
    <h3>Recherche de livre :</h3>
        <form method="POST" action="#">
            <input type="bigint" name="isbn">
            <input type="submit">
        </form>
        {% if elements %}
            {% for key, book in elements %}
            <div>
                <ul style='background:lightblue; float:left; max-width:20%; margin-left:20px;'>
                    <h3>{{book.titre}}</h3>
                    <li>auteur :
                        {% for auteur in book.auteur %}
                            {{auteur}}
                        {% endfor %}
                    </li>
                    <li>description : {{book.description}}</li>
                    <li>editeur : {{book.editeur}}</li>
                    <li>genre : 
                        {% for genre in book.genre %}
                            {{genre}}
                        {% endfor %}
                    </li>
                    <li>publication : {{book.publication}}</li>
                </ul>
            </div>
            {% endfor %}
        {% endif %}
    </body>
</html>